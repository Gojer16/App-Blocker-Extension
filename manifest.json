{
    "manifest_version": 3,
    "name": "App Blocker Extension",
    "version": "1.0",
    "description": "Blocks distracting websites and requires challenges to access them temporarily.",
     "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
    "permissions": [
      "declarativeNetRequest",
      "storage",
      "alarms",
      "webNavigation"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_title": "App Blocker"
    },
    "options_page": "options/options.html",
    "host_permissions": [
      "<all_urls>"
    ]
  }
  